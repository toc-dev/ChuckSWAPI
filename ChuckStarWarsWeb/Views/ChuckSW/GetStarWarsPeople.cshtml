@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model ChuckSWWeb.Models.StarWars.People
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Star Wars People</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="ChuckSW" asp-action="GetStarWarsPeople" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Get Star Wars People</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>

			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model.Results){
				<tr>
					<td>@item.Name</td>

					<td>
						<a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
					</td>
				</tr>
			}
		</tbody>
    </table>

</div>
